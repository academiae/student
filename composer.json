{
    "name": "academiae/student",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gab Amba",
            "homepage": "http://www.gabbydgab.com/",
            "email": "gamba@gabbydgab.com"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0-dev"
        }
    },
    "require": {
        "php": "~7.0.0"
    },
    "require-dev": {              
        "phpunit/phpunit": "^5.5",
        "squizlabs/php_codesniffer": "^2.6.2",
        "phpbench/phpbench": "^0.11.2",
        "sebastian/phpcpd": "^2.0.4",        
        "fzaninotto/faker": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Academiae\\Student\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcademaieTest\\Student\\": "test/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@show-me-the-bugs"
        ],
        "show-me-the-bugs": [
            "@cs",
            "@cpd",
            "@test"
        ],
        "cs": "phpcs --ignore=/vendor,/build src test",
        "cs-fix": "phpcbf --ignore=/vendor,/build src test",
        "cpd": "phpcpd --exclude=/vendor,/build --fuzzy src test",
        "test": "phpunit --verbose"
    }
}
